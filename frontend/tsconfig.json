{
"compilerOptions": {
"target": "ES2020",
"useDefineForClassFields": true,
"lib": ["ES2020", "DOM", "DOM.Iterable"],
"module": "ESNext",
"skipLibCheck": true,
"moduleResolution": "bundler",
"resolveJsonModule": true,
"isolatedModules": true,
"noEmit": true,
"jsx": "react-jsx",
"baseUrl": ".",
"paths": {
"@domain/*": ["src/domain/*"],
"@services/*": ["src/services/*"],
"@patterns/*": ["src/patterns/*"],
"@state/*": ["src/state/*"],
"@components/*": ["src/components/*"],
"@pages/*": ["src/pages/*"]
}
},
"include": ["src"]
}